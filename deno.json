{
  "tasks": {
    "check": "deno check dot_config/nvim/**/*.ts",
    "bench:pwsh": "pwsh -NoProfile -File win/benchmark.ps1",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test -A",
    "ci": "deno task check && deno task lint && deno task fmt --check && deno task test",
    "hooks:install": "deno run --allow-read=deno.json,.git/hooks/ --allow-write=.git/hooks/ jsr:@hongminhee/deno-task-hooks",
    "hooks:pre-commit": "deno task ci",
    "hooks:pre-push": "deno task ci"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "include": ["dot_config/nvim"],
    "exclude": ["dot_config/nvim/usage_data.json"]
  },
  "lint": {
    "include": ["dot_config/nvim"],
    "exclude": ["dot_config/nvim/usage_data.json"],
    "rules": {
      "exclude": [
        "no-import-prefix"
      ]
    }
  },
  "workspace": [
    "./dot_config/nvim/denops/config"
  ],
  "lock": false
}
